<dl>
  <dt>
    <%= t(
      ".html",
      date: l(donation.pickup_date, format: :default),
    ) %>
  </dt>
  <% if donation.pending? %>
    <%= render("donations/actions", donation: donation) %>
  <% else %>
    <dd class="donation-status--<%= status_for_donation(donation) %>">
      <%= label_for_donation(donation) %>

      <%= yield %>
    </dd>
  <% end %>
</dl>
